{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

<main class="container mt-5 p-3">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <section class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <h1 class="border-bottom border-dark border-2 pt-2 pb-2 mb-4">Panier</h1>

            {% if data is not empty %}
                <div class="row">
                
                    <div class="col-lg-8">
                        <div class="list-group">
                            {% for element in data %}
                                <div class="list-group-item d-flex align-items-center justify-content-between py-3">
                                    <div class="d-flex align-items-center" style="width:140px;">
                                        <img src="{{ element.manga.cover }}" 
                                            alt="{{ element.manga.title }}" 
                                            class="rounded me-3" 
                                            style="height: 70px; object-fit: cover;">
                                            <p class="mb-1 fw-bold">{{ element.manga.title }}</p>
                                    </div>

                                    <div class="d-flex align-items-center">
                                        <a href="{{ path('cart_remove', {id: element.manga.id}) }}" class="btn btn-sm">-</a>
                                        <span class="mx-2">{{ element.quantity }}</span>
                                        <a href="{{ path('cart_add', {id: element.manga.id}) }}" class="btn btn-sm">+</a>
                                    </div>

                                    <div class="fw-bold">
                                        {{ element.manga.prix }} €
                                    </div>

                                    <div>
                                        <a href="{{ path('cart_delete', {id: element.manga.id}) }}" class="btn btn-outline btn-sm">×</a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                  
                    <div class="col-lg-4">
                        <div class="card shadow-sm p-3 sticky-top" style="top: 20px;">
                            <h4 class="mb-3">Détails du panier</h4>
                            
                                {% for element in data %}
                                    <div class="d-flex justify-content-between">
                                        <p class="mb-1">{{ element.manga.title }}</p>
                                        <p>x {{ element.quantity }}</p>
                                    </div>
                                {% endfor %}
                           
                            <div class="d-flex justify-content-between fw-bold">
                                <span>Total</span>
                                <span>{{ total }} €</span>
                            </div>

                            <div class="mt-3 d-grid gap-2">
                                <a class="btn btn-outline-dark" href="/manga/">Continuer mes achats</a>
                                <a class="btn btn-dark" href="/pay">Passer au paiement</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center">Votre panier est vide</p>
            {% endif %}
        </div>
    </section>

</main>

<script>
    setTimeout(() => {
        const alert = document.querySelector('.alert');
        if (alert) alert.remove();
    }, 3000);
</script>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Simulation de paiement{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-black text-white">
                    <h4 class="mb-0">Simulation de paiement</h4>
                </div>
                <div class="card-body">
                    <form method="post" action="{{ path('app_pay_submit') }}">
                        <h5>Adresse de livraison</h5>
                        <div class="mb-3">
                            <input type="text" class="form-control" name="name" placeholder="Nom complet" required>
                        </div>
                        <div class="mb-3">
                            <input type="text" class="form-control" name="address" placeholder="Adresse" required>
                        </div>
                        <div class="mb-3 row">
                            <div class="col">
                                <input type="text" class="form-control" name="zip" placeholder="Code postal" required>
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" name="city" placeholder="Ville" required>
                            </div>
                        </div>

                        <h5>Carte bancaire (fictive)</h5>
                        <div class="mb-3">
                            <input type="text" class="form-control" name="card" placeholder="NumÃ©ro de carte" required>
                        </div>
                        <div class="mb-3 row">
                            <div class="col">
                                <input type="text" class="form-control" name="expiry" placeholder="MM/AA" required>
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" name="cvc" placeholder="CVC" required>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" name="action" value="cancel" class="btn btn-outline-secondary"formnovalidate > Annuler </button>
                            <button type="submit" name="action" value="success" class="btn btn-dark">Payer (simulation)</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<main class="container mt-4 pt-5 text-center text-white">
    <h2>Bienvenue sur la page d'accueil !</h2>

    <div class="container mt-4 text-start">
        <h3><b>Les plus populaires</b></h3>

        <!-- Carrousel Bootstrap -->
        <div id="mangaCarousel" class="carousel slide mt-3" data-bs-ride="carousel" data-bs-interval="4000">
            <div class="carousel-inner">
                {% for manga in mangas %}
                    <div class="carousel-item {% if loop.first %}active{% endif %}">
                        <img src="{{ manga.image }}"
                             class="d-block mx-auto img-fluid rounded"
                             style="max-height: 400px; object-fit: cover;"
                             alt="{{ manga.title }}">
                        <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2">
                            <h5>{{ manga.title }}</h5>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- FlÃ¨ches de navigation -->
            <button class="carousel-control-prev" type="button" data-bs-target="#mangaCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#mangaCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </div>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

   
{% endblock %}